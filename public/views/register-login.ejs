<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Firebase Auth Example</title>

        <!-- Firebase SDK -->
        <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js"></script>
        <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-auth.js"></script>

    </head>
    <body>
        <h1>Firebase Authentication Example</h1>

        <!-- Registration Form -->
        <div>
            <h2>Register</h2>
            <form id="registerForm">
            <input type="email" id="registerEmail" placeholder="Email" required>
            <input type="password" id="registerPassword" placeholder="Password" required>
            <button type="submit">Register</button>
            </form>
        </div>

        <!-- Login Form -->
        <div>
            <h2>Login</h2>
            <form id="loginForm">
            <input type="email" id="loginEmail" placeholder="Email" required>
            <input type="password" id="loginPassword" placeholder="Password" required>
            <button type="submit">Login</button>
            </form>
        </div>

        <!-- Logout Button -->
        <div>
            <h2>Logout</h2>
            <button id="logoutButton" style="display:none;">Logout</button>
        </div>

        <!-- Success Message -->
        <div id="message" style="display:none;"></div>

        <!-- Link to firebase-config.js -->
        <script type="module">
            import { registerUser, loginUser, logoutUser } from './firebase-config.js';

            // Register Form Submission
            const registerForm = document.getElementById('registerForm');
            registerForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const email = document.getElementById('registerEmail').value;
            const password = document.getElementById('registerPassword').value;
            registerUser(email, password);  // Call registerUser from firebase-config.js
            });

            // Login Form Submission
            const loginForm = document.getElementById('loginForm');
            loginForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            loginUser(email, password);  // Call loginUser from firebase-config.js
            });

            // Logout Button
            const logoutButton = document.getElementById('logoutButton');
            logoutButton.addEventListener('click', () => {
            logoutUser();  // Call logoutUser from firebase-config.js
            });
        </script>
    </body>
</html>