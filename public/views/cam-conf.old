<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h2>Add Camera</h2>
    <form id="addCameraForm">
        <!-- Display the Camera ID on the form (readonly field) -->
        <label>Camera ID: <input type="text" name="cameraId" id="cameraId" value="" readonly></label><br>
        
        <!-- Other form fields -->
        <label>Name: <input type="text" name="name" required></label><br>
        <label>Route (IP, Port, Path): <input type="text" name="ip" required></label><br>
        <label>Username: <input type="text" name="user"></label><br>
        <label>Password: <input type="password" name="password"></label><br>
        
        <button type="submit">Add Camera</button>
    </form>

    <script>
    // Generate the camera ID when the page loads
    let cameraId = `cam_${Date.now()}_${Math.floor(Math.random() * 10000)}`;
    
    // Set the generated camera ID to the input field
    document.getElementById('cameraId').value = cameraId;
    
    // When the form is submitted
    document.getElementById('addCameraForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        // Get the form data
        const formData = new FormData(e.target);
        
        // Create the camera object, including the generated cameraId
        const cam = {
            id: cameraId,  // Use the generated camera ID
            name: formData.get('name'),
            ip: formData.get('ip'),
            user: formData.get('user'),
            password: formData.get('password')
        };

        // Send the camera data to the server
        try {
            const response = await fetch("/user/<%= id %>/cams/add", {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(cam)
            });

            const result = await response.json();
            if (result.status === true) {
                alert(`Camera ${cam.name} added successfully!`);
                // Optionally reset the form after success
                e.target.reset();

                // Generate a new ID for the next camera after successful submission
                cameraId = `cam_${Date.now()}_${Math.floor(Math.random() * 10000)}`;
                document.getElementById('cameraId').value = cameraId;  // Update the camera ID in the form
            } else {
                alert('Error adding camera.');
            }
        } catch (err) {
            console.error('Error:', err);
            alert('Failed to communicate with server.');
        }
    });
    </script>
</body>
</html>