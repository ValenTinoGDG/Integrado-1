<!DOCTYPE html>
<html lang="en">
<head>
  <script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= cam.name %> | MyCamApp</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

  <!-- Navbar Partial -->
  <%- include('partials/navbar', { id }) %>

  <div class="container">
    <div class="cam-x-layout">
      <div class="cam-x-video-wrapper">
        <video id="video" muted autoplay playsinline>
          <source id="video-source" type="application/x-mpegURL" src="<%= `/user/${id}/${cam.id}/index.m3u8` %>">
          Your browser does not support the video tag.
        </video>
        <h1><%= cam.name %></h1>
      </div>

      <div class="cam-x-sidebar">
        <% if (otherCams.length > 0) { %>
          <% otherCams.forEach(other => { %>
            <div class="cam-preview-card">
              <div class="cam-preview-thumb">
                <!-- Replace this with real preview if you have one -->
                <span class="cam-placeholder">Preview</span>
              </div>
              <p class="cam-preview-title"><%= other.name %></p>
            </div>
          <% }) %>
        <% } else { %>
          <div class="no-other-cams">
            <p>No other cameras available.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script>
    const video = document.getElementById('video');
    const videoSource = document.getElementById('video-source');

    if (Hls.isSupported()) {
      const hls = new Hls({
        liveSyncDuration: 20 // Optional, tells HLS.js to aim for ~20s behind live
      });

      hls.loadSource(videoSource.src);
      hls.attachMedia(video);

      hls.on(Hls.Events.MANIFEST_PARSED, () => {
        video.play();
      });

      

    } else if (video.canPlayType('application/vnd.apple.mpegurl')) {
      video.src = videoSource.src;
      video.addEventListener('canplay', () => {
        video.play();
      });
    }
  </script>
</body>
</html>